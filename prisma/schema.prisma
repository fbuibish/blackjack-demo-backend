// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  rounds    Round[]  // Relation to Round
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Round {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  shoe       String   // JSON string of the shoe (array of cards)
  stack      Int      @default(1000) // Initial stack amount
  aiAssisted Boolean
  hands      Hand[]   // Relation to Hand
  createdAt  DateTime @default(now())
}

model Hand {
  id         Int         @id @default(autoincrement())
  roundId    Int
  round      Round       @relation(fields: [roundId], references: [id])
  cardGroups CardGroup[] // Relation to CardGroup
  outcome    String      // 'win', 'lose', or 'push'
  createdAt  DateTime @default(now())
}

model CardGroup {
  id         Int    @id @default(autoincrement())
  handId     Int
  hand       Hand   @relation(fields: [handId], references: [id])
  cards      String // JSON string of the cards (array of cards)
  isSplit    Boolean
  wager      Int
  createdAt  DateTime @default(now())
}